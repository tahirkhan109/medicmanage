<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Metronic | Admin Dashboard Template</title>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
  <meta content="" name="description"/>
  <meta content="" name="author"/>
</head>
<body class="login">
<div class="logo">
  <a href="index.html">
    <img src="/assets/logo-big.png" alt=""/>
  </a>
</div>
<div class="menu-toggler sidebar-toggler">
</div>
<div class="content">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <form class="login-form" action="" method="post">
        <h3 class="form-title">Login to your account</h3>

        <div class="alert alert-danger display-hide">
          <button class="close" data-close="alert"></button>
            <span>
            Enter any username and password. </span>
        </div>
        <div class="form-group">
          <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
          <label class="control-label visible-ie8 visible-ie9">Username</label>

          <div class="input-icon">
            <i class="fa fa-user"></i>
            <!--<input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username"/>-->
            <%= f.email_field :email, autofocus: true, :class => "form-control placeholder-no-fix", :placeholder => "Username" %>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label visible-ie8 visible-ie9">Password</label>

          <div class="input-icon">
            <i class="fa fa-lock"></i>
            <!--<input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password"/>-->
            <%= f.password_field :password, autocomplete: "off", :class => "form-control placeholder-no-fix", :placeholder => "Password" %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          <%= f.submit "Sign in", :class => "btn green pull-right" %>
          </br>
          <%#= render "users/shared/links" %>
        </div>
        <div class="login-options">
          <h4>Or login with</h4>
          <ul class="social-icons">
            <li>
              <a class="facebook" data-original-title="facebook" href="#">
              </a>
            </li>
            <li>
              <a class="twitter" data-original-title="Twitter" href="#">
              </a>
            </li>
            <li>
              <a class="googleplus" data-original-title="Goole Plus" href="#">
              </a>
            </li>
            <li>
              <a class="linkedin" data-original-title="Linkedin" href="#">
              </a>
            </li>
          </ul>
        </div>
        <!--<div class="forget-password">-->
        <!--<h4>Forgot your password ?</h4>-->

        <!--<p>-->
        <!--no worries, click <a href="/users/password/new" id="forget-password">-->
        <!--here </a>-->
        <!--to reset your password.-->
        <!--</p>-->
        <!--</div>-->
        <!--<div class="create-account">-->
        <!--<p>-->
        <!--Don't have an account yet ?&nbsp; <a href="/users/sign_up" id="register-btn">-->
        <!--Create an account </a>-->
        <!--</p>-->
        <!--</div>-->
      </form>
  <% end %>
</div>
<div class="copyright">
  2014 &copy; Pusher. Admin Dashboard Template.
</div>
<script>
    jQuery(document).ready(function () {
        Metronic.init(); // init metronic core components
        Layout.init(); // init current layout
        QuickSidebar.init() // init quick sidebar
//Login.init();
    });
</script>
</body>
</html>
